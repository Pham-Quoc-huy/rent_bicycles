{
  "info": {
    "name": "QR Code API Tests",
    "description": "Test collection cho các API QR Code - Lấy xe và trả xe",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Quét QR Code - Lấy thông tin",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/qr/scan/INVOICE:1",
          "host": ["{{base_url}}"],
          "path": ["api", "qr", "scan", "INVOICE:1"]
        },
        "description": "Quét QR code để lấy thông tin invoice và kiểm tra điều kiện lấy xe"
      },
      "response": []
    },
    {
      "name": "2. Xác nhận lấy xe",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/qr/pickup/INVOICE:1",
          "host": ["{{base_url}}"],
          "path": ["api", "qr", "pickup", "INVOICE:1"]
        },
        "description": "Xác nhận lấy xe sau khi đã thanh toán thành công"
      },
      "response": []
    },
    {
      "name": "3. Xác nhận trả xe",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/qr/return/INVOICE:1",
          "host": ["{{base_url}}"],
          "path": ["api", "qr", "return", "INVOICE:1"]
        },
        "description": "Xác nhận trả xe và tính toán giá tiền cuối cùng"
      },
      "response": []
    },
    {
      "name": "3.1. Xác nhận trả xe tại trạm khác",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/qr/return/INVOICE:1?returnStationId=2",
          "host": ["{{base_url}}"],
          "path": ["api", "qr", "return", "INVOICE:1"],
          "query": [
            {
              "key": "returnStationId",
              "value": "2"
            }
          ]
        },
        "description": "Xác nhận trả xe tại trạm khác (station ID = 2)"
      },
      "response": []
    },
    {
      "name": "4. Lấy thông tin invoice theo QR code",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/qr/invoice/INVOICE:1",
          "host": ["{{base_url}}"],
          "path": ["api", "qr", "invoice", "INVOICE:1"]
        },
        "description": "Lấy thông tin chi tiết invoice theo QR code"
      },
      "response": []
    },
    {
      "name": "5. Test QR Code không hợp lệ",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/qr/scan/INVALID_QR_CODE",
          "host": ["{{base_url}}"],
          "path": ["api", "qr", "scan", "INVALID_QR_CODE"]
        },
        "description": "Test trường hợp QR code không hợp lệ"
      },
      "response": []
    },
    {
      "name": "6. Test lấy xe chưa thanh toán",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/qr/pickup/INVOICE:999",
          "host": ["{{base_url}}"],
          "path": ["api", "qr", "pickup", "INVOICE:999"]
        },
        "description": "Test trường hợp lấy xe chưa thanh toán"
      },
      "response": []
    },
    {
      "name": "7. Test trả xe chưa lấy",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/qr/return/INVOICE:1",
          "host": ["{{base_url}}"],
          "path": ["api", "qr", "return", "INVOICE:1"]
        },
        "description": "Test trường hợp trả xe khi chưa lấy xe"
      },
      "response": []
    },
    {
      "name": "8. Lấy danh sách trạm có thể trả xe",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/qr/available-return-stations",
          "host": ["{{base_url}}"],
          "path": ["api", "qr", "available-return-stations"]
        },
        "description": "Lấy danh sách tất cả trạm có thể trả xe"
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    }
  ]
}
